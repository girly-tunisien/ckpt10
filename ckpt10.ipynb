    "import time\n",
    "def countdown(t):\n",
    "    while t:\n",
    "        minutes,seconds=divmod(t, 60)\n",
    "        print(minutes,\":\",seconds,end = '\\r')\n",
    "        time.sleep(1)\n",
    "        t=t-1\n",
    "    return (\"Fire in the hole\")\n",
    "t=int(input(\"input the length of the countdown in seconds:\"))\n",
    "print(countdown(t))"
   ]
